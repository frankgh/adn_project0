<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/frankghButtonBackgroundSelectedColor" />
            <size
                android:width="@dimen/main_activity_launcher_button_width"
                android:height="@dimen/main_activity_launcher_button_height" />
            <stroke
                android:width="1dp"
                android:color="@color/frankghButtonBorderColor" />
            <padding
                android:bottom="@dimen/action_button_padding_bottom"
                android:left="@dimen/action_button_padding_left"
                android:right="@dimen/action_button_padding_right"
                android:top="@dimen/action_button_padding_top" />
            <corners android:radius="@dimen/action_button_corner_radius" />
        </shape>
    </item>
</layer-list>

